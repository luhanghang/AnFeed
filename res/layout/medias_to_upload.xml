<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android:layout_height="fill_parent">
    <TextView android:id="@+id/uploadFilesTaskName"
                  android:layout_width="fill_parent"
                  android:layout_weight="1"
                  android:background="#555555"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:textColor="#ffffff"
                  android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:paddingTop="5dp"
                  android:gravity="center_vertical"
                  android:paddingBottom="5dp"
                  android:background="#333333"
                  android:layout_height="wrap_content"
                  android:layout_weight="1">
        <TextView android:id="@+id/uploadFilesSiteName"
                  android:layout_width="80dp"
                  android:ems="5"
                  android:ellipsize="end"
                  android:layout_weight="1"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_height="wrap_content"/>
        <ProgressBar android:id="@+id/uploadFilesSiteProgressBar"
                     android:layout_weight="99"
                     android:max="100"
                     style="?android:attr/progressBarStyleHorizontal"
                     android:layout_height="wrap_content"
                     android:layout_width="fill_parent"/>
        <TextView android:id="@+id/uploadFilesSitePercent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="right"
                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="3dp"
                  android:ems="2"
                  android:layout_width="wrap_content"/>
        <ImageView android:id="@+id/uploadFilesPlayPause"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:padding="10dp"
                   android:src="@drawable/btn_play"
                   android:layout_width="wrap_content"/>
    </LinearLayout>
    <ListView
            android:id="@+id/uploadFiles"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="99"
            android:drawSelectorOnTop="false"
            />
</LinearLayout>