<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <AbsoluteLayout android:layout_height="60dp"
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:id="@+id/uploaded_media_list_item"
                    android:layout_marginRight="10dp">
        <ImageView android:id="@+id/media_thumb_uploaded"
                   android:layout_width="fill_parent"
                   android:scaleType="centerCrop"
                   android:layout_height="fill_parent"/>
        <ImageView android:id="@+id/media_uploaded_play"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:layout_centerInParent="true"
                   android:src="@drawable/play"
                />
    </AbsoluteLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_weight="99"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/uploadedFileName"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_weight="99"/>
        <TextView android:id="@+id/uploadedFileSize"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:gravity="right"
                  android:paddingLeft="5dp"
                  android:paddingRight="10dp"
                  android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>