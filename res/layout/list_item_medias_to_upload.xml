<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <AbsoluteLayout android:layout_height="60dp"
                    android:id="@+id/toupload_media_list_item"
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp">
        <ImageView android:id="@+id/media_thumb"
                   android:layout_width="fill_parent"
                   android:scaleType="centerCrop"
                   android:layout_height="fill_parent"/>
        <ImageView android:id="@+id/media_play"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:layout_centerInParent="true"
                   android:src="@drawable/play"
                />
    </AbsoluteLayout>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_weight="99"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/uploadFileName"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_weight="1"/>
        android:layout_width="fill_parent"/>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <ProgressBar android:id="@+id/media_progress"
                         android:layout_weight="99"
                         android:max="100"
                         style="?android:attr/progressBarStyleHorizontal"
                         android:layout_height="wrap_content"
                         android:layout_width="fill_parent"/>
            <TextView android:id="@+id/media_progress_text"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:layout_marginRight="5dp"
                      android:layout_marginLeft="3dp"
                      android:ems="2"
                      android:layout_width="wrap_content"/>
        </LinearLayout>
        <TextView android:id="@+id/uploadFileSize"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>